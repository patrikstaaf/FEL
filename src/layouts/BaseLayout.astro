---
import BaseHead from "../components/BaseHead.astro";
import NavDesktop from "../components/NavDesktop.astro";
import NavMobile from "../components/NavMobile.astro";
import Footer from "../components/Footer.astro";

const { title, description, canonicalURL } = Astro.props;
---

<html lang="sv-SE">
  <head>
    <BaseHead {title} {description} {canonicalURL} />
  </head>
  <body>
    <div class="desktop-nav">
      <NavDesktop />
    </div>
    <div class="mobile-nav">
      <NavMobile />
    </div>
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style>
  .desktop-nav {
    display: none;
  }

  .mobile-nav {
    display: block;
  }

  @media screen and (min-width: 1000px) {
    .desktop-nav {
      display: block;
    }

    .mobile-nav {
      display: none;
    }
  }
</style>
