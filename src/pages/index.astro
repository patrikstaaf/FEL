---
// Component Imports
import BaseLayout from "../layouts/BaseLayout.astro";
import ContactSection from "../components/ContactSection.astro";
import LabsSection from "../components/LabsSection.astro";
import CurrentLabSection from "../components/CurrentLabSection.astro";
import CopySection from "../components/CopySection.astro";
import IntroSection from "../components/IntroSection.astro";
import HeroSection from "../components/HeroSection.astro";

// You can import components from any supported Framework here!

// Component Script:
// You can write any JavaScript/TypeScript that you'd like here.
// It will run during the build, but never in the browser.
// All variables are available to use in the HTML template below.
const title = "Future Experience Lab";
const description =
  "Future Experience Lab är en experimentverkstad för att provköra framtiden. Och skapa den.";

// Full Astro Component Syntax:
// https://docs.astro.build/core-concepts/astro-components/
---

<BaseLayout
  {title}
  {description}
  canonicalURL={Astro.request.canonicalURL.href}
>
  <HeroSection />
  <IntroSection />
  <CopySection />
  <CurrentLabSection />
  <LabsSection />
  <ContactSection />
</BaseLayout>
