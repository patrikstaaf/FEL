---
import MainButton from "../components/MainButton.astro";

const buttontexts = "Kontakta oss";
---

<section title="kontakta oss">
  <div class="svg-wrapper">
    <svg
      width="421"
      height="422"
      viewBox="0 0 261 422"
      fill="none"
      xmlns="http://www.w3.org/2000/svg"
    >
      <rect
        x="15"
        y="15"
        width="391"
        height="392"
        rx="195.5"
        stroke="#DAF1F8"
        stroke-width="30"></rect>
    </svg>
  </div>
  <div class="section-wrapper">
    <div class="image-wrapper">
      <img src="/src/images/contact-section.png" alt="" />
    </div>
    <span class="style-span-small test-bg"></span>
    <span class="style-span-large test-bg"></span>
    <div class="content-wrapper">
      <h2 class="test">
        <span class="text-span">Provkör din</span><span class="text-span"
          >verksamhets framtid</span
        >
      </h2>
      <div class="body-text">
        <h3>
          Behöver du också ett Future Experience Lab för din verksamhets
          framtid? Kontakta oss!
        </h3>
        <p>
          Lorem ipsum dolor sit amet, consectetur adipiscing elit. Risus
          ultrices pellentesque pellentesque ultricies lacus, dui elementum
          eleifend.
        </p>
        <MainButton buttontext={buttontexts} />
      </div>
    </div>
  </div>
</section>

<style>
  section {
    position: relative;
    width: 100%;
    height: 938px;
  }

  h2 {
    position: absolute;
    font-family: var(--heading);
    font-size: 32px;
    line-height: 29px;
    z-index: 5;
  }

  h3 {
    font-family: var(--body-bold);
    font-size: 16px;
    line-height: 24px;
    padding-top: 110px;
  }

  p {
    font-family: var(--body);
    font-size: 16px;
    line-height: 24px;
    padding: 16px 0 32px 0;
  }
  .text-span {
    display: block;
  }

  .content-wrapper {
    max-width: 500px;
    padding-right: 16px;
    padding-left: 24px;
  }
  .svg-wrapper {
    display: none;
  }

  .img-wrapper {
    position: absolute;
    width: 100%;
    height: 510px;
  }

  .style-span-small {
    position: absolute;
    height: 110px;
    width: 16px;
    background-color: #f7e733;
    left: 0;
  }

  .style-span-large {
    position: absolute;
    height: 110px;
    width: 269px;
    background-color: #f7e733;
    right: 0;
    bottom: 370px;
  }

  @media screen and (min-width: 850px) {
    .image-wrapper {
      padding-left: 64px;
      position: absolute;
      bottom: 0;
    }
    .image-wrapper img {
      width: 533px;
      height: 718px;
      object-fit: cover;
      z-index: 1;
    }

    h2 {
      font-size: 64px;
      line-height: 62px;
      z-index: 3;
      position: absolute;
      left: 22.5%;
      top: 33%;
    }
    h3 {
      font-size: 20px;
      padding-bottom: 20px;
      padding-right: 10px;
      line-height: 30px;
    }

    p {
      padding-right: 10px;
      line-height: 30px;
      padding-bottom: 20px;
    }

    .style-span-small {
      position: absolute;
      height: 180px;
      width: 32px;
      background-color: #f7e733;
      left: 19%;
      top: 30%;
    }
    .style-span-large {
      position: absolute;
      height: 180px;
      width: 358px;
      background-color: #f7e733;
      left: 38%;
      top: 30%;
    }
    .body-text {
      position: absolute;
      padding-left: 10%;
      max-width: 400px;
      bottom: 6%;
      right: 18%;
    }
  }
  @media screen and (min-width: 1000px) {
    .svg-wrapper {
      position: absolute;
      top: 30%;
      right: 0;
      display: block;
    }

    .img-wrapper {
      position: absolute;
      width: 350px;
      /* height: 510px; */
    }

    .body-text {
      position: absolute;
      max-width: 500px;
      bottom: 6%;
      right: 18%;
    }
  }
</style>
